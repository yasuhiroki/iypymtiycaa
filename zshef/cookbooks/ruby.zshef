#!/usr/bin/env zsh

source ${${(%):-%N}:A:h}/docker/_func.sh

function zshef::install() {
    zshef::util::mng::is_installed "docker" || {
        zshef::util::log::error "Depends docker"
        return 1
    }

    my::docker::language::init \
        "ruby:alpine" \
        "docker run -it --rm -e BUNDLE_APP_CONFIG" \
        "/usr/local/bin" \
        "${HOME}/mybin"
}

