#!/usr/bin/env zsh

function zshef::install() {
    zshef::util::mng::is_installed "ghq" || {
        zshef::util::lang::go::install github.com/x-motemen/ghq@latest
    }
    git config --global ghq.root "~/ghq"
}

function zshef::update() {
    zshef::util::mng::is_installed "ghq" && {
        zshef::util::lang::go::update github.com/x-motemen/ghq@latest
    }
    git config --global ghq.root "~/ghq"
}
